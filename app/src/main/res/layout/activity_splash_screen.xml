<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="@dimen/activity_horizontal_margin"
    android:paddingEnd="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/white">
    <View
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/splash_center"
        android:background="@color/lightGray" />
    <ImageView
        android:id="@+id/icon"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/sp_logo"
        android:layout_alignBottom="@+id/splash_center"
        android:contentDescription="@string/app_name" />
    <TextView
        android:id="@+id/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@+id/splash_center"
        android:layout_marginTop="40dp"
        android:text="@string/app_name"
        android:textSize="24sp"
        android:textColor="@color/gray"
        android:textStyle="bold|italic" />
    <TextView
        android:id="@+id/version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/app_name"
        android:text="0.0.0 test"
        android:textSize="16sp"
        android:textColor="@color/gray"
        android:textStyle="bold|italic"
        android:paddingBottom="40dp" />
    <ImageView
        android:id="@+id/language_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/world_sel_lang"
        android:layout_below="@+id/version"
        android:layout_toStartOf="@+id/select_lang"
        android:contentDescription="Language Icon"
        android:visibility="invisible" />
    <TextView
        android:id="@+id/select_lang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/version"
        android:text="Select Language:"
        android:textSize="18sp"
        android:textColor="@color/gray"
        android:layout_marginBottom="10dp"
        android:paddingLeft="6dp"
        android:visibility="invisible"/>
    <Spinner
        android:id="@+id/language_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/primaryDark"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/select_lang"
        android:visibility="invisible" />

</RelativeLayout>
