<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/film_studio_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="364dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/film_studio_guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <VideoView
            android:id="@+id/film_studio_video_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/film_studio_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".5" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/film_studio_narration_toolbar"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/film_studio_guideline" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/film_studio_sfx_toolbar"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/film_studio_narration_move_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:background="#00000000"
        app:layout_constraintBottom_toBottomOf="@+id/film_studio_narration_toolbar"
        app:layout_constraintEnd_toEndOf="@+id/film_studio_narration_toolbar"
        app:layout_constraintTop_toTopOf="@+id/film_studio_guideline"
        app:srcCompat="@drawable/ic_chevron_right_white_48dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/film_studio_vertical_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <ImageButton
        android:id="@+id/film_studio_play_pause_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00000000"
        app:layout_constraintBottom_toBottomOf="@+id/film_studio_sfx_toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/film_studio_sfx_toolbar"
        app:layout_constraintTop_toTopOf="@+id/film_studio_sfx_toolbar"
        app:srcCompat="@drawable/ic_play_arrow_white_48dp" />

    <ImageView
        android:id="@+id/film_studio_audio_tracks"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/film_studio_sfx_toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/film_studio_narration_toolbar"
        app:srcCompat="@color/black_overlay" />

    <ImageButton
        android:id="@+id/film_studio_narration_move_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:background="#00000000"
        app:layout_constraintBottom_toBottomOf="@+id/film_studio_narration_toolbar"
        app:layout_constraintStart_toStartOf="@+id/film_studio_narration_toolbar"
        app:layout_constraintTop_toTopOf="@+id/film_studio_guideline"
        app:srcCompat="@drawable/ic_chevron_left_white_48dp" />
    <RelativeLayout
        android:id="@+id/lock_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_semi_transparent">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/ic_lock_blue"
            android:contentDescription="@string/stage_locked" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>