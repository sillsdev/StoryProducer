<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ImageButton
        android:id="@+id/audio_comment_play_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:srcCompat="@drawable/ic_green_play"
        android:background="@color/white"
        android:contentDescription="@string/play" />

    <TextView
        android:id="@+id/audio_comment_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black_semi_transparent"
        android:textSize="@dimen/text_title"
        android:text="Fill with Audio Comment"
        android:layout_margin="8dp"
        android:layout_centerInParent="true"
        tools:ignore="HardcodedText" />

    <ImageButton
        android:id="@+id/audio_comment_delete_button"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        app:srcCompat="@drawable/ic_delete_red"
        android:layout_alignParentEnd="true"
        android:background="@color/white"
        android:contentDescription="@string/delete" />

</RelativeLayout>